{
  "name": "cozycup-backend",
  "version": "1.0.0",
  "description": "Backend API for CozyCup - Click & Collect orders, seat reservations, and digital coffee passes",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --passWithNoTests",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker build -t cozycup-api:dev --target=dev .",
    "docker:run": "docker run -d --rm -p 3000:3000 --env-file .env -e MONGO_URI=mongodb://host.docker.internal:27017/cozycup cozycup-api:dev"
  },
  "keywords": [],
  "author": "Elad Gelerenter",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/k6": "^1.2.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "k6": "^0.0.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "pino": "^9.9.2",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.8"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/*.(test|spec).(js|mjs)"
    ]
  }
}
